@model JewelryReal.Models.Sale
@{
    ViewBag.Title = "Удаление сделки";
}

<div>
    <dl class="dl-horizontal">
        <dt>Дата сделки</dt>
        <dd>
            @Html.DisplayFor(model => model.Sale_date)
        </dd>
        <dt>Изделие</dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt>Сумма сделки</dt>
        <dd>
            @Html.DisplayFor(model => model.Sale_price)
        </dd>
        <dt>Фамилия покупателя</dt>
        <dd>
            @Html.DisplayFor(model => model.Client.Surname)
        </dd>
        <dt>Имя покупателя</dt>
        <dd>
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt>Отчество покупателя</dt>
        <dd>
            @Html.DisplayFor(model => model.Client.Patronymic)
        </dd>
    </dl>

    <div>
        <form asp-controller="Sale" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>