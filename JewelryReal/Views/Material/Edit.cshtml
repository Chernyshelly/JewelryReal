@model JewelryReal.Models.Material
@{
    ViewBag.Title = "Редактирование материала";
}
<form asp-action="edit" asp-controller="Material" asp-route-MaterialID="@Model.MaterialID">
    <div class="form-group">
        <label asp-for="Material_name" class="control-label">Имя материала</label>
        <input type="text" asp-for="Material_name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price_for_gram" class="control-label">Цена за грамм</label>
        <input type="number" asp-for="Price_for_gram" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>