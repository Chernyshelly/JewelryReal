@model JewelryReal.Models.Discount
@{
    ViewBag.Title = "Удаление скидки";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя скидки</dt>
        <dd>
            @Html.DisplayFor(model => model.Discount_name)
        </dd>

        <dt>Покупок для получения</dt>
        <dd>
            @Html.DisplayFor(model => model.Min_bought_for_discount)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>