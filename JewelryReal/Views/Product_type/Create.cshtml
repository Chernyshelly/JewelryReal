@model JewelryReal.Models.Product_type
@{
    ViewBag.Title = "Добавление типа изделий";
}
<form asp-action="create" asp-controller="Product_type">
    <div class="form-group">
        <label asp-for="Type_name" class="control-label">Имя типа изделий</label>
        <input type="text" asp-for="Type_name" class="form-control" />
