@model JewelryReal.Models.Discount
@{
    ViewBag.Title = "Редактирование скидки";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Discount_percent">
    <div class="form-group">
        <label asp-for="Discount_percent" class="control-label">Процент скидки</label>
        <input type="text" readonly asp-for="Discount_percent" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Discount_name" class="control-label">Имя скидки</label>
        <input type="text" asp-for="Discount_name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Min_bought_for_discount" class="control-label">Покупок, чтобы иметь скидку</label>
        <input type="number" asp-for="Min_bought_for_discount" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>