@model JewelryReal.Models.Product
@{
    ViewBag.Title = "Редактирование изделия";
}
<form asp-action="edit" asp-controller="Product" asp-route-ProductID="@Model.ProductID">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название изделия</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mass" class="control-label">Вес изделия</label>
        <input type="number" asp-for="Mass" step="0.01" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена изделия</label>
        <input type="number" asp-for="Price" step="0.01" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product_type.TypeID" class="control-label">Тип изделия</label>
        <select asp-for="Product_type.TypeID" asp-items="ViewBag.Product_types" class="form-control"></select>
    </div>
    @for (int i = 0; i < Model.Materials.Count; i++)
    {
        <div class="form-group">
            <label asp-for="Materials[i]" class="control-label">Тип изделия</label>
            <select asp-for="Materials[i]" asp-items="ViewBag.Materials" class="form-control"></select>
        </div>
    }
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>